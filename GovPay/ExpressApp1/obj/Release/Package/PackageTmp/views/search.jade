doctype html
html
  head
    title Search for a Company
  body
    input(type="text", id="companyName" placeholder="companyName")
    input(type='button',value='Search',data-transition='fade', data-theme='c', onclick='searchCompany();')
    div(id='results')

script.
    function searchCompany() {
        var xhttp = new XMLHttpRequest();
        xhttp.onreadystatechange = function() {
            if (xhttp.readyState == 4 && xhttp.status == 200) {
                document.getElementById("results").innerHTML = xhttp.responseText;
            }
        };
        xhttp.open("GET", "search/searchResults?companyName=" + document.getElementById("companyName").value, true);
        xhttp.send();
    }